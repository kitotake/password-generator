{
  "name": "password-generator-styles",
  "version": "1.0.0",
  "description": "SCSS styles for password generator application",
  "main": "main.scss",
  "scripts": {
    "build": "sass main.scss dist/style.css --style=compressed",
    "dev": "sass main.scss dist/style.css --watch --style=expanded",
    "build-dev": "sass main.scss dist/style.css --style=expanded --source-map",
    "lint": "stylelint \"**/*.scss\"",
    "format": "prettier --write \"**/*.scss\""
  },
  "dependencies": {
    "scss": "^0.2.4"
  },
  "devDependencies": {
    "sass": "^1.69.0",
    "stylelint": "^15.11.0",
    "stylelint-config-sass-guidelines": "^10.0.0",
    "prettier": "^3.0.0"
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not dead"
  ],
  "keywords": [
    "scss",
    "sass",
    "css",
    "password-generator",
    "responsive",
    "ui"
  ],
  "author": "Your Name",
  "license": "MIT"
}
